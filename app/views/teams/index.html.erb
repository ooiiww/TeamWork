<h1>Listing teams</h1>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Leader</th>
    <th>Private</th>
    <th>Recruiting</th>
  </tr>

<% @teams.each do |team| %>
  <tr>
    <td><%= link_to team.name, team %></td>
    <td><%= link_to team.user.name, team.user %></td>
    <td><%= team.private %></td>
    <td><%= team.recruiting %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Team', new_team_path %>
