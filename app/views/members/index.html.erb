<h1><%= link_to @team.name, @team %> members</h1>

<table class="table talbe-striped">
  <tr>
    <th>Nickname</th>
    <th>User</th>
    <th>Verifying</th>
    <th>Manager</th>
    <th></th>
    <th></th>
  </tr>

<% @members.each do |member| %>
  <tr>
    <td><%= link_to member.nickname, member %></td>
    <td><%= link_to member.user.name, member.user%></td>
    <td><%= member.verifying %></td>
    <td><%= member.manager %></td>
    <td><%= link_to 'Edit', edit_team_member_path(@team, member) %></td>
    <td><%= link_to 'Destroy', team_member_path(@team, member), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Member', new_team_member_path(@team) %>
